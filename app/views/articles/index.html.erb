<p><%= notice %></p>

<div class="container m-auto p-4">
  <h1 class="text-2xl underline text-center">Articles list</h1>

  <table class="table-auto w-full border-collapse border my-5 text-center">
    <thead>
      <tr class="bg-slate">
        <th class="px-4 py-2 border">Tytuł</th>
        <th class="px-4 py-2 border">Treść</th>
        <th class="px-4 py-2 border">Status</th>
        <th class="px-4 py-2 border">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <%= render partial: "article", locals: { article: article } %>
      <% end %>
    </tbody>
  </table>

  <button class="bg-green font-bold py-2 px-4 rounded-full">
    <%= link_to 'New Article', new_article_path %>
  </button>
</div>
