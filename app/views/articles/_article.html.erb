<tr>
  <td class="px-4 py-3 border"><%= article.title %></td>
<td class="px-3 py-3">
  <% if article.image.attached? && article.image.persisted? %>
      <%= image_tag article.image.variant(resize_to_fit: [250, 250]), class: "pl-5" %>
    <p>Nazwa obrazka: <%= article.image.filename.to_s %></p>
  <% else %>
    <p>Obrazek nie został załączony</p>
  <% end %>
</td>
  <td class="px-4 py-3 border"><%= article.body %></td>
  <td class="px-4 py-3 border"><%= article.published ? 'Published' : 'Draft' %></td>
  <td class="px-4 py-3 border space-x-2">
    <%= link_to 'Show this article', article_path(article), class: "bg-bermuda font-bold py-2 px-4 rounded-full" %>
    <%= link_to 'Edit article', edit_article_path(article), class: "bg-yellow font-bold py-2 px-4 rounded-full" %>
    <%= link_to 'Delete this article', article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete the article?" }, class: "bg-red font-bold py-2 px-4 rounded-full" %>
  </td>
</tr>
