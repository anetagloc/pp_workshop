<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-5xl font-bold text-center mb-8 text-bermuda">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :username, class: "block text-sm font-medium text-slate" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", required: true, class: "mt-2 block w-full border border-grey rounded-md shadow-sm focus:border-bermuda focus:ring-bermuda sm:text-sm" %>
    </div>

    <div class="field">
      <%= f.label :email, class: "block text-sm font-medium text-slate" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 block w-full border border-grey rounded-md shadow-sm focus:border-bermuda focus:ring-bermuda sm:text-sm" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "block text-sm font-medium text-slate" %>
      <% if @minimum_password_length %>
        <p class="mt-2 text-sm text-slate"><em>(<%= @minimum_password_length %> characters minimum)</em></p>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-2 block w-full border border-grey rounded-md shadow-sm focus:border-bermuda focus:ring-bermuda sm:text-sm" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-slate" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-2 block w-full border border-grey rounded-md shadow-sm focus:border-bermuda focus:ring-bermuda sm:text-sm" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "w-full bg-bermuda text-white py-2 px-4 border border-transparent rounded-md shadow-sm text-base font-medium hover:bg-green focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-bermuda" %>
    </div>
  <% end %>

  <p class="mt-6 text-center text-slate">Do you have an account?</p>

  <div class="mt-4 text-center py-2 w-full">
    <%= link_to 'Log in', new_session_path(resource_name), class: "inline-block bg-green text-white py-2 px-4 border border-transparent rounded-md shadow-sm text-base font-medium hover:bg-bermuda focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-bermuda" %>
  </div>
</div>
